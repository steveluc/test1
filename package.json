{
  "name": "quilt-designer",
  "version": "1.0.0",
  "description": "Interactive quilt pattern designer",
  "main": "dist/quilt.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run rename-index",
    "rename-index": "node -e \"const fs=require('fs'); if(fs.existsSync('dist/index-new.html')) fs.renameSync('dist/index-new.html', 'dist/index.html')\"",
    "preview": "vite preview",
    "build:tsc": "tsc",
    "build:vite": "vite build",
    "build:webpack": "webpack --mode production",
    "build:esbuild": "esbuild quilt.ts --bundle --outfile=dist/quilt.js --sourcemap",
    "dev:vite": "vite",
    "watch:tsc": "tsc --watch",
    "watch:esbuild": "esbuild quilt.ts --bundle --outfile=dist/quilt.js --sourcemap --watch"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.0",
    "esbuild": "^0.19.0"
  },
  "keywords": ["quilt", "designer", "pattern"],
  "author": "",
  "license": "MIT"
}
